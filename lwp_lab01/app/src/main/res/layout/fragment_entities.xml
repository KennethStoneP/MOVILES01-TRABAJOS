<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entities.EntitiesFragment">


    <ImageView
        android:id="@+id/college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/college_foreground"
        android:layout_marginHorizontal="130dp"/>

    <TextView
        android:id="@+id/title_entities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_entities"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/college"/>

    <ImageView
        android:id="@+id/INA"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@mipmap/ina_foreground"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/title_entities"/>

    <TextView
        android:id="@+id/txt_INA"
        android:layout_width="252dp"
        android:layout_height="92dp"
        android:text="@string/text_INA"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textStyle="italic"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="196dp"/>

    <ImageView
        android:id="@+id/MEP"
        android:layout_width="136dp"
        android:layout_height="147dp"
        android:src="@mipmap/mep_foreground"
        android:layout_below="@+id/INA"
        android:layout_marginTop="75dp"/>

    <TextView
        android:id="@+id/txt_MEP"
        android:layout_width="261dp"
        android:layout_height="92dp"
        android:text="@string/text_INA"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textStyle="italic"
        android:layout_below="@+id/txt_INA"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="126dp"/>
</RelativeLayout>